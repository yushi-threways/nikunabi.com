<% content_for :page_h1 do %>
<h1>
  店舗詳細情報
  <small>詳細情報</small>
</h1>
<ol class="breadcrumb">
  <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
  <li class="active">Here</li>
</ol>
<% end %>


<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box-header with-border">
        <h3 class="box-title">店舗詳細情報</h3>
      </div><!-- /.box-header -->
      <div class="box-body no-padding">
        <p id="notice"><%= notice %></p>

        <table class="table table-striped">
          <tbody>
            <tr>
              <th>Shop</th>
              <td><%= @detail.shop.id %></td>
            </tr>
            <tr>
              <th>こだわり</th>
              <td><%= @detail.concept %></td>
            </tr>
            <tr>
              <th>営業時間</th>
              <td><%= @detail.open %></td>
            </tr>
            <tr>
              <th>定休日</th>
              <td><%= @detail.holiday %></td>
            </tr>
            <tr>
              <th>アクセス</th>
              <td><%= @detail.access %></td>
            </tr>
            <tr>
              <th>駐車場</th>
              <td><%= @detail.parking %></td>
            </tr>
            <tr>
              <th>支払い方法</th>
              <td><%= @detail.payment %></td>
            </tr>
            <tr>
              <th>個室の有無</th>
              <td><%= @detail.room %></td>
            </tr>
            <tr>
              <th>喫煙・禁煙</th>
              <td><%= @detail.smoking %></td>
            </tr>
            <tr>
              <th>店舗トップ画像</th>
              <td class="mypage-shop-detail-img"><%= image_tag @detail.image.url %></td>
            </tr>
          </tbody>
        </table>

      </div>
      <%= link_to 'Edit', edit_detail_path(@detail) %> |
      <%= link_to 'Back', shop_path(current_shop) %>
    </div>
  </div>
</div>
