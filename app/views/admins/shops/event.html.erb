<% provide(:title, "店舗管理基本情報一覧") %>

<% content_for :page_h1 do %>
<h1>
  店舗イベント管理情報一覧
  <small>店舗イベント管理情報一覧</small>
</h1>
<ol class="breadcrumb">
  <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
  <li class="active">Here</li>
</ol>
<% end %>

<div class="list-group">
<table class="table">
<thead>
<tr>
<th>ID</th>
<th>店舗名</th>
<th>イベント名</th>
<th>内容</th>
<th>画像</th>
<th>登録日</th>
<th>公開日</th>
<th>終了日</th>
<th>公開状況</th>
</tr>
</thead>
<% @shops.each do |shop| %>
<% unless shop.shop_events.empty? %>
<tr>
<td><%= shop.id %></td>
<td><%= shop.name %></td>
  <% shop.shop_events.each do |shop_event| %>
  <td><%= shop_event.title %></td>
  <td><%= shop_event.content %></td>
  <td><%= image_tag shop_event.image.url(:sm_thumb) %></td>
  <td><%= shop_event.created_at %></td>
  <td><%= shop_event.published_at %></td>
  <td><%= shop_event.closed_at %></td>
  <td><% if shop_event.published %>公開中<% else %>未公開<% end %></td>
  <% end %>
</tr>
<% end %>
<% end %>
</table>
  
<%= paginate @shops %>
</div>