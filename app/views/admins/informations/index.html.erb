<h1>新着</h1>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>コンテンツ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @informations.each do |information| %>
      <tr>
        <td><%= information.title %></td>
        <td><%= information.content %></td>
        <td><%= link_to '編集', edit_admins_information_path(information) %></td>
        <td><%= link_to '削除', [:admins, information], method: :delete, data: { confirm: '削除してもよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

