<p id="notice"><%= notice %></p>

<h1>Information</h1>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>コンテンツ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @information.each do |information| %>
      <tr>
        <td><%= information.title %></td>
        <td><%= information.content %></td>
        <td><%= link_to 'Show', information %></td>
        <td><%= link_to '編集', edit_information_path(information) %></td>
        <td><%= link_to '削除', information, method: :delete, data: { confirm: '削除してもよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Information', new_information_path %>
