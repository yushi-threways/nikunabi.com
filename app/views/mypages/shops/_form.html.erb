<%= form_with(model: @shop, url: (@shop.new_record? ? [:mypages ,@shop]: [:mypages, @shop]), local: true) do |form| %>

  <% if shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shop.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :コンセプト %><br />
    <%= form.text_field :concept, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :こだわり %><br />
    <%= form.text_field :particular, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :shop_image %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
