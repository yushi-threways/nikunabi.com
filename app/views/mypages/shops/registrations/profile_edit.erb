<% provide(:title, "店舗情報編集") %>
<% content_for :page_h1 do %>
<h1>
  店舗情報編集
  <small>店舗編集</small>
</h1>
<ol class="breadcrumb">
  <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
  <li class="active">Here</li>
</ol>
<% end %>

<div class="box box-primary">
  <div class="row">
    <div class="col-md-12">
          <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :店舗名 %><br />
          <%= f.text_field :name, :placeholder => "ニクナビ焼肉", autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :店舗名サブタイトル %><br />
          <%= f.text_field :description, :placeholder => "王道焼肉", autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号 %><br />
          <%= f.text_field :telNumber, :placeholder => "0520000000", autofocus: true, class: 'form-control' %>
        </div>


      <div class="mypage-regi-btn">
       <div class="form-group">
      <p class="h4">こだわり商品</p>
      <%= collection_check_boxes(current_shop, :recommend_ids, Recommend.all, :id, :name) do |r| %>
        <%= r.label(class: "checkbox-inline") do %>
          <%= r.check_box(autocomplete: "off") %> <%= r.object.name %>
        <% end %>
      <% end %>
      </div>

        <div class="form-group">
        <p class="h4">来店ポイント</p>
        <%= collection_check_boxes(current_shop, :feature_ids, Feature.all, :id, :name) do |r| %>
           <%= r.label(class:"checkbox-inline") do %>
              <%= r.check_box(class: "check_box", autocomplete: "off") %><%= r.object.name %>
            <% end %>
        <% end %>
        </div>
        </div>
        

        <div class="actions">
          <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>
