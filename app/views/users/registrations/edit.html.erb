<% provide(:title, "店舗ユーザー編集") %>

<% content_for :page_h1 do %>
<h1>
  ユーザー情報編集
  <small>店舗ユーザー編集</small>
</h1>
<ol class="breadcrumb">
  <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
  <li class="active">Here</li>
</ol>
<% end %>

<div class="box box-primary">
  <div class="row">
    <div class="col-md-7 col-md-offset-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :店舗名 %><br />
          <%= f.text_field :name, :placeholder => "ニクナビ焼肉", autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %><br />
          <%= f.text_field :telNumber, :placeholder => "0520000000", autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :パスワード %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <em id="helpBlock" class="help-block"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認用 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :現在のパスワード %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="action">
      <p><%= button_to "変更を中止する", registration_path(resource_name), data: { confirm: "変更を中止してもよろしいでしょうか?" }, method: :delete %></p>
      </div>
      <%= link_to "Back", :back %>

    </div>
  </div>
</div>
