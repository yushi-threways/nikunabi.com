<%= form_with(model: @address, url: (@address.new_record? ? [:users, @address]: @address), local: true) do |form| %>


  <div class="form-group">
    <%= form.label :郵便番号 %><br />
    <%= form.text_field :zipcode, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :都道府県 %><br>
    <%= form.select :prefecturecode, Address.prefecturecodes.keys, {prompt: '都道府県選択してください'}, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= form.label :市町村・区 %><br />
    <%= form.select :city, Address.cities.keys, {prompt: '市区町村選択してください'}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :番地 %><br />
    <%= form.text_field :street, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :建物名 %><br />
    <%= form.text_field :building, class: 'form-control' %>
  </div>

  <div class="form-group">
  <div class="actions">
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
  </div>

  <% end %>
