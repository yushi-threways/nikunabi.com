<% content_for :page_h1 do %>
<h1>
  店舗こだわり情報編集
  <small>こだわり情報編集</small>
</h1>
<ol class="breadcrumb">
  <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
  <li class="active">Here</li>
</ol>
<% end %>


<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box-header with-border">
        <h3 class="box-title">店舗こだわり情報</h3>
      </div><!-- /.box-header -->
      <div class="box-body no-padding">
        <p id="notice"><%= notice %></p>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>タイトル</th>
              <th>画像</th>
              <th>内容</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% current_shop.prides.each do |pride| %>
              <tr>
                <td><%= pride.title %></td>
                <td class="mypage-shop-menu-img"><%= image_tag pride.image.url(:sm_thumb) %></td>
                <td><%= pride.content %></td>
                <td><%= link_to '編集', edit_shops_pride_path(pride), class: "btn btn-primary" %></td>
                <td><%= link_to '削除', [:shops, pride], method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: "btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
