     <div class="home-blog_<%= i %>">
     <div class="home-blog_<%= i %>-inner">
     <%= link_to blog_url(blog) do %>
     <div class="home-blog_<%= i %>--image">
     <%= image_tag blog.main_image.url %>
     </div>
     <div class="home-blog_<%= i %>-content">
     <p class="home-blog_<%= i %>-content--time">
