<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td class="mypage-shop-menu-img"><%= image_tag blog.image.url %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to '編集', edit_admins_blog_url(blog) %></td>
        <td><%= link_to '削除', blog, method: :delete, data: { confirm: '削除してもよろしいでしょうか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_admins_blog_path %>
